<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/moviesFragment">

    <fragment
        android:id="@+id/moviesFragment"
        android:name="ru.gaket.themoviedb.presentation.movies.view.MoviesFragment"
        android:label="movies_fragment"
        tools:layout="@layout/movies_fragment">
        <action
            android:id="@+id/action_moviesFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="ru.gaket.themoviedb.presentation.moviedetails.view.MovieDetailsFragment"
        android:label="MovieDetailsFragment"
        tools:layout="@layout/movie_details_fragment">
    <action
            android:id="@+id/action_movieDetailsFragment_to_authFragment"
            app:destination="@id/authFragment" />
        <action
            android:id="@+id/action_movieDetailsFragment_to_reviewFragment"
            app:destination="@id/reviewFragment" />
    </fragment>

    <fragment
        android:id="@+id/authFragment"
        android:name="ru.gaket.themoviedb.presentation.auth.view.AuthFragment"
        android:label="AuthFragment" />

    <fragment
        android:id="@+id/reviewFragment"
        android:name="ru.gaket.themoviedb.presentation.review.ReviewFragment"
        android:label="ReviewFragment" />
</navigation>
