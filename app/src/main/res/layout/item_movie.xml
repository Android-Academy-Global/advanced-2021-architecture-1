<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/main"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  tools:context=".presentation.movies.view.MoviesFragment"
  tools:layout_width="200dp">

  <TextView
    android:id="@+id/movieName"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_linear"
    android:gravity="center"
    android:paddingHorizontal="@dimen/space_small"
    android:paddingTop="26dp"
    android:paddingBottom="8dp"
    android:textAllCaps="true"
    android:textColor="@color/colorTitles"
    android:textSize="15sp"
    android:textStyle="bold"
    android:translationY="-16dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/movieThumbnail"
    tools:text="Spider Man: Homerun 2 3 4" />

  <ImageView
    android:id="@+id/movieThumbnail"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:contentDescription="@string/content_cinema_poster"
    android:scaleType="centerCrop"
    app:layout_constraintDimensionRatio="H,2:3"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:src="@drawable/placeholder_movie_grey_200" />

</androidx.constraintlayout.widget.ConstraintLayout>
